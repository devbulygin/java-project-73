<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    <changeSet id="1" author="devbulygin">
        <!-- Создаём таблицу -->
        <!-- Указываем имя таблицы -->
        <createTable tableName="users">
            <!-- Создаём столбцы таблицы -->
            <!-- Указываем имя и тип данных в столбце -->
            <!-- Указываем что значение поля генерируется автоматически -->
            <column name="id" type="bigint" autoIncrement="true">
                <!-- Указываем, что значение является первичным ключом -->
                <constraints primaryKey="true"/>
            </column>
            <!-- Создаём остальные столбцы -->
            <column  name="first_name"  type="varchar(250)"/>
            <column  name="last_name"  type="varchar(250)"/>
            <column  name="email"  type="varchar(250)"/>
            <column  name="password"  type="varchar(250)"/>
            <column name="created_at" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="devbulygin">

        <addNotNullConstraint columnDataType="varchar(250)"
                              columnName="first_name"
                              tableName="users"
                              validate="true"/>
        <addNotNullConstraint columnDataType="varchar(250)"
                              columnName="last_name"
                              tableName="users"
                              validate="true"/>
        <addNotNullConstraint columnDataType="varchar(250)"
                              columnName="email"
                              tableName="users"
                              validate="true"/>
        <addNotNullConstraint columnDataType="varchar(250)"
                              columnName="password"
                              tableName="users"
                              validate="true"/>
    </changeSet>

    <changeSet id="3" author="devbulygin">
        <createTable tableName="task_statuses">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column  name="name"  type="varchar(250)">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="4" author="devbulygin">
        <!-- Создаём таблицу -->
        <!-- Указываем имя таблицы -->
        <createTable tableName="tasks">
            <!-- Создаём столбцы таблицы -->
            <!-- Указываем имя и тип данных в столбце -->
            <!-- Указываем что значение поля генерируется автоматически -->
            <column name="id" type="bigint" autoIncrement="true">
                <!-- Указываем, что значение является первичным ключом -->
                <constraints primaryKey="true"/>
            </column>
            <!-- Создаём остальные столбцы -->
            <column  name="name"  type="varchar(250)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
            <column name="task_status_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="tasks_task_status_id_task_status_id" references="task_statuses(id)"/>
            </column>
            <column name="author_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="tasks_author_id_users_id" references="users(id)"/>
            </column>
            <column name="executor_id" type="BIGINT">
                <constraints
                        foreignKeyName="tasks_executor_id_users_id" references="users(id)"/>
            </column>
            <column name="created_at" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
